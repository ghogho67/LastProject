<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="hospital">

	<!-- 병원 전체 리스트 조회 -->
	<select id="hosList" resultType="hospitalVo">
		select * 
		from hospital
		order by hos_id
	</select>
	
	<!-- 병원 전체 수 조회 -->
	<select id="hosCnt" resultType="int">
		select count(*)
		from hospital
	</select>
	
	<!-- 특정 병원 조회 -->
	<select id="getHospital" parameterType="int" resultType="hospitalVo">
		select *
		from hospital
		where hos_id = #{hos_id}
	</select>
	
	<!-- 병원 페이징 리스트 -->
	<select id="hosPagingList" parameterType="pageVo" resultType="hospitalVo">
		<![CDATA[
		select *
		from
		(select a.*, rownum rn
		from
		(select a.*
		from hospital a
		order by hos_id) a)
		where rn >= (#{page}-1)*#{pageSize} + 1 and rn <= #{page}*#{pageSize}	
		]]>
		
	</select>
	
	
	<!-- 병원 등록 -->
    <insert id="insertHospital" parameterType="hospitalVo">
   		INSERT INTO HOSPITAL(HOS_ID
   							,HOS_NM
   							,HOS_ADD
   							,HOS_PHONE)
   					VALUES(HOS_ID.NEXTVAL
   						  ,#{HOS_NM}
   						  ,#{HOS_ADD}
   						  ,#{HOS_PHONE})
   </insert>
   
   <!-- 병원 삭제 -->
   <delete id="deleteHospital" parameterType="int">
   		delete 
   		from hospital
   		where hos_id = #{hos_id}
   </delete>
   
   <!-- 병원 검색 - 지역단위 -->
   <select id="getSearchHosAdd" parameterType="string" resultType="hospitalVo">
   		select *
   		from hospital
   		where hos_add like '%'||#{hos_add}||'%'
   </select>
   
   <!-- 지역별 검색을 한 병원 리스트 수 -->
   <select id="searchHosCnt" resultType="int" parameterType="string">
		select count(*) 
		from hospital
		where hos_add like '%'||#{hos_add}||'%'   
   </select>
   
   <!-- 지역별 검색을 통한 페이지네이션 -->
   <select id="searchHosPagingList"  parameterType="Map" resultType="hospitalVo">
   <![CDATA[
   		select *
		from
		(select a.*, rownum rn
		from
		(select a.*
		from hospital a
		where  hos_add like '%'||#{hos_add}||'%'
		order by hos_id) a)
		where rn >= (#{page}-1)*#{pageSize} + 1 and rn <= #{page}*#{pageSize}
   ]]>
   </select>
   
   <!-- 지역 검색 후 주소만 검색 -->
   <select id="searchMapList" parameterType="string" resultType="hospitalVo">
   		select hos_add
		from hospital
		where hos_add like '%'||#{hos_add}||'%'
   </select>

</mapper>





