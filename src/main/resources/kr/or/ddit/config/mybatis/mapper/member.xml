<mapper namespace="member">
   <!-- 전체  사용자 리스트 조회 하기-->
   <select id="getMemList" resultType="memberVo">
      SELECT *
      FROM MEMBER
      ORDER BY mem_id
   </select>

   <!-- 특정 사용자 조회 -->
   <select id="getMemVo" resultType="memberVo" parameterType="String">
      SELECT *
      FROM MEMBER
      WHERE mem_id = #{mem_id}
   </select>
   
