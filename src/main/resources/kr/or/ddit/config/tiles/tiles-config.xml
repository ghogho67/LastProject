<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE tiles-definitions PUBLIC "-//Apache Software Foundation//DTD Tiles Configuration 3.0//EN" "http://tiles.apache.org/dtds/tiles-config_3_0.dtd">

<tiles-definitions>
	<definition name="mainLayout" template ="/WEB-INF/view/common/layout.jsp">
		<put-attribute name="header" value="/WEB-INF/view/common/header.jsp"/>
		<put-attribute name="left" value="/WEB-INF/view/common/sideBar.jsp"/>
		<put-attribute name="body" value=""/>
	</definition>
	
	<definition name="myPageLayout" template ="/WEB-INF/views/common/layout.jsp">
		<put-attribute name="header" value="/WEB-INF/views/common/header.jsp"/>
		<put-attribute name="left" value="/WEB-INF/views/common/left.jsp"/>
		<put-attribute name="body" value=""/>
	</definition>
	
	<!-- main -->
	<definition name="tiles.main" extends="mainLayout">
		<put-attribute name="body" value="/WEB-INF/view/tilesTest.jsp"/>
	</definition>
	
	<!-- userpagingList -->
	<definition name="tiles.userPagingList" extends="layout">
		<put-attribute name="body" value="/WEB-INF/views/user/userPagingList.jsp"/>
	</definition>
	
	<!-- locale view -->
	<definition name="tiles.locale" extends="layout">
		<put-attribute name="body" value="/WEB-INF/views/locale/locale.jsp"/>
	</definition>
	
	<!-- ajax view-->
	<definition name="tiles.ajaxView" extends="layout">
		<put-attribute name="body" value="/WEB-INF/views/ajax/ajaxView.jsp"/>
	</definition>
	
	
	<!-- ajax view-->
	<definition name="tiles.pagingListAjaxView" extends="layout">
		<put-attribute name="body" value="/WEB-INF/views/user/userPagingListAjax.jsp"/>
	</definition>
</tiles-definitions>

