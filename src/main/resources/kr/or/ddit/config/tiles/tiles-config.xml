<!DOCTYPE tiles-definitions PUBLIC "-//Apache Software Foundation//DTD Tiles Configuration 3.0//EN" "http://tiles.apache.org/dtds/tiles-config_3_0.dtd">
<!-- Subpage tiles -->
<tiles-definitions>
	<definition name="subPageLayout" template ="/WEB-INF/view/common/subPageLayout.jsp">
		<put-attribute name="header" value="/WEB-INF/view/common/subPageheader.jsp"/>
		<put-attribute name="left" value="/WEB-INF/view/common/subPagesideBar.jsp"/>
		<put-attribute name="body" value=""/>
		<put-attribute name="footer" value="/WEB-INF/view/common/footer.jsp"/>
	</definition>	
	<definition name="*.tiles" extends="subPageLayout">
		<put-attribute name="content"   value="/WEB-INF/views/{1}.jsp" />
	</definition>
	<definition name="/web/*.tiles" extends="subPageLayout">
		<put-attribute name="content"   value="/WEB-INF/views/web/{1}.jsp" />
	</definition>
	<definition name="/web/*/*.tiles" extends="subPageLayout">
		<put-attribute name="content"   value="/WEB-INF/views/web/{1}/{2}.jsp" />
	</definition>
	<definition name="/web/*/*/*.tiles" extends="subPageLayout">
		<put-attribute name="content"   value="/WEB-INF/views/web/{1}/{2}/{3}.jsp" />
	</definition>
	
	
